
<section class="bg-image"
  style="background-image: url('https://images.pexels.com/photos/704971/pexels-photo-704971.jpeg?cs=srgb&dl=pexels-daria-shevtsova-704971.jpg&fm=jpg');">
  
  <div class="mask d-flex align-items-center h-100 gradient-custom-3 pb-0">
    <div class="container h-100 pb-0">
      <div class="container row d-flex justify-content-center align-items-center h-100 pb-0">
        <div class="container col-12 col-md-9 col-lg-7 col-xl-6 pb-0">
          <div class="card m-4" style="">
            <div class="card-body px-5 pt-5">
                <h2 class="text-uppercase text-center mb-5">Create an account</h2>
                    <% if @user.errors.any? %>
                        <p> <%= @user.errors.full_messages.join(',') %> </p>
                    <% end %>
                    <div class="form-outline mb-4">
                        <%= form_with(model: @user) do |f| %>
                            <div class="form-outline mb-4">
                                <%= f.label :username, class: "form-label"%>
                                <%= f.text_field :username, class: "form-control form-control-lg"%>
                            </div>
                            <div class="form-outline mb-4">
                                <%= f.label :email, class: "form-label"%>
                                <%= f.text_field :email, class: "form-control form-control-lg"%>
                            </div>
                            <div class="form-outline mb-4">
                                <%= f.label :profile_img_url, "Profile Image URL", class: "form-label"%>
                                <%= f.text_field :profile_img_url, class: "form-control form-control-lg"%>
                            </div>
                            <div class="d-flex justify-content-center mt-4">
                            <%= f.submit 'Update', class:"btn btn-outline-dark my-2 my-sm-0"%>
                            </div>
                        <% end %>
                    </div>
             

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>