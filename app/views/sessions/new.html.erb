<section class="" style="background: url(https://images.pexels.com/photos/326281/pexels-photo-326281.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2);">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h3 class="mb-5">Sign in</h3>
                <div class="form-outline mb-4">
                    <%= form_with url: session_path do |f|%>
                        <div class="form-outline mb-4">
                            <%= f.label :email, class:"form-label"%>
                            <%= f.text_field :email, class:"form-control form-control-lg"%>
                        </div>
                        <div class="form-outline mb-4">
                            <%= f.label :password, class:"form-label"%>
                            <%= f.password_field :password, class:"form-control form-control-lg"%>
                        </div>
                        <%= f.submit 'Sign In', class:"btn btn-outline-dark btn-lg btn-block"%>
                    <% end %>
                </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>